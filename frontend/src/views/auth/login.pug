extends ../layouts/base

block content
  .container
    h1 Login

    if errors && errors.length
      ul.form-errors
        each e in errors
          li #{e.msg}

    form(method="post" action="/auth/login")
      .form-group
        label(for="emailOrUsername") Email or Username
        input#emailOrUsername(type="text" name="emailOrUsername" value=(values && values.emailOrUsername) class="form-control")

      .form-group
        label(for="password") Password
        input#password(type="password" name="password" class="form-control")

      button(type="submit" class="button") Login
